{
    "name": "mtga-deck-tracker",
    "version": "1.0.0",
    "description": "Magic The Gathering Deck Tracker",
    "main": "main.js",
    "author": {
        "name": "Cody Schrank"
    },
    "scripts": {
        "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
        "postinstall:web": "node postinstall-web",
        "postinstall:electron": "node postinstall",
        "ng": "ng",
        "start": "npm-run-all -p ng:serve electron:serve",
        "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build",
        "build:dev": "npm run build -- -c dev",
        "build:prod": "npm run build -- -c production",
        "copy": "mkdirp dist && npm-run-all -p copy:root copy:modules copy:static",
        "copy:root": "copyfiles *.js *.json dist/",
        "copy:modules": "cd dist/ && npm install && cd ../",
        "copy:static": "copyfiles -a -u static/**/**/* dist/",
        "ng:serve": "ng serve",
        "ng:serve:web": "npm run postinstall:web && ng serve -o",
        "electron:dev": "electron ./dist --serve",
        "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc-watch",
        "electron:serve-tsc": "tsc -p tsconfig-serve.json",
        "electron:serve-tsc-watch": "npm run copy && tsc-watch --onSuccess \"npm run electron:dev\" -p tsconfig-serve.json",
        "electron:local": "npm run build:prod && electron ./dist",
        "electron:linux": "npm run build:prod && npx electron-builder build --linux",
        "electron:windows": "npm run build:prod && npx electron-builder build --windows",
        "electron:mac": "npm run build:prod && npx electron-builder build --mac",
        "test": "npm run postinstall:web && ng test",
        "e2e": "npm run postinstall:web && ng e2e"
    },
    "dependencies": {
        "@angular-devkit/build-angular": "0.10.3",
        "@angular/cli": "7.0.3",
        "@angular/common": "7.0.1",
        "@angular/compiler": "7.0.1",
        "@angular/compiler-cli": "7.0.1",
        "@angular/core": "7.0.1",
        "@angular/forms": "7.0.1",
        "@angular/http": "7.0.1",
        "@angular/language-service": "7.0.1",
        "@angular/platform-browser": "7.0.1",
        "@angular/platform-browser-dynamic": "7.0.1",
        "@angular/router": "7.0.1",
        "@ngx-translate/core": "11.0.0",
        "@ngx-translate/http-loader": "4.0.0",
        "@types/hashmap": "^2.0.29",
        "@types/jasmine": "2.8.9",
        "@types/jasminewd2": "2.0.5",
        "@types/needle": "^2.0.2",
        "@types/node": "^10.12.1",
        "@types/request": "^2.48.0",
        "@types/request-promise": "^4.1.42",
        "@types/tail": "^1.2.0",
        "@types/underscore": "^1.8.9",
        "codelyzer": "4.5.0",
        "copyfiles": "^2.1.0",
        "core-js": "2.5.7",
        "debounce-async": "0.0.2",
        "electron": "3.0.6",
        "electron-builder": "20.29.0",
        "electron-is-dev": "^1.0.1",
        "electron-reload": "1.2.5",
        "fasttail": "^1.2.4",
        "hashmap": "^2.3.0",
        "inversify": "^5.0.1",
        "jasmine-core": "3.3.0",
        "jasmine-spec-reporter": "4.2.1",
        "karma": "3.1.1",
        "karma-chrome-launcher": "2.2.0",
        "karma-coverage-istanbul-reporter": "2.0.4",
        "karma-jasmine": "1.1.2",
        "karma-jasmine-html-reporter": "1.4.0",
        "line-by-line": "^0.1.6",
        "mkdirp": "^0.5.1",
        "n-readlines": "^1.0.0",
        "npm-run-all": "4.1.3",
        "npx": "10.2.0",
        "object-sizeof": "^1.3.0",
        "promise-throttle": "^1.0.0",
        "protractor": "5.4.1",
        "reflect-metadata": "^0.1.12",
        "request-promise": "^4.2.2",
        "rimraf": "^2.6.2",
        "rxjs": "6.3.3",
        "ts-node": "7.0.1",
        "tsc-watch": "^1.0.30",
        "tslint": "5.11.0",
        "typescript": "3.1.4",
        "underscore": "^1.9.1",
        "wait-on": "3.1.0",
        "webdriver-manager": "12.1.0",
        "zone.js": "0.8.26"
    }
}
